						{
							"listen": "test",
							"script": {
								"exec": [
									"//seta o nome do usuário na variavel assim que a request retorna sucesso\r",
									"const response = pm.response.json()\r",
									"const userName = response.username\r",
									"pm.collectionVariables.set('userName', userName);\r",
									"\r",
									"//pega o UserId assim que a request roda\r",
									"const response_userId = pm.response.json()\r",
									"const userId = response_userId.userID\r",
									"pm.collectionVariables.set('userId', userId);\r",
									"\r",
									"pm.response.to.have.status(201);"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
